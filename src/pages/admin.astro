---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admin Dashboard | Matthew's Yard Services">
  <!-- Authentication Gatekeeper Script -->
  <script>
    import { onAuthStateChanged, signOut } from 'firebase/auth';
    import { auth } from '../firebase/client.js';

    // Listen for authentication state changes
    onAuthStateChanged(auth, (user) => {
      if (!user) {
        // User is not logged in, redirect to login page
        window.location.href = '/login';
      }
    });

    // Setup logout functionality when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      const logoutButton = document.getElementById('logout-button');
      if (logoutButton) {
        logoutButton.addEventListener('click', async () => {
          try {
            await signOut(auth);
            window.location.href = '/';
          } catch (error) {
            console.error('Logout error:', error);
            alert('Error logging out. Please try again.');
          }
        });
      }
    });
  </script>

  <!-- Background -->
  <div class="min-h-screen bg-gradient-to-br from-background via-accent/20 to-background relative overflow-hidden">
    <!-- Floating Background Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-accent/10 rounded-full blur-2xl"></div>
      <div class="absolute top-1/2 left-0 w-32 h-32 bg-primary-light/5 rounded-full blur-xl"></div>
    </div>

    <main class="relative container mx-auto px-4 py-8">
      <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="bg-white/95 backdrop-blur-lg rounded-2xl shadow-2xl p-8 mb-8 border border-white/20">
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
            <div class="flex items-center space-x-4">
              <div class="h-16 w-16 bg-gradient-to-br from-primary to-primary-light rounded-2xl flex items-center justify-center shadow-lg">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <div>
                <h1 class="text-4xl font-bold text-neutral-dark mb-2 tracking-tight">Admin Dashboard</h1>
                <p class="text-secondary text-lg">Matthew's Yard Services Control Panel</p>
                <div class="flex items-center mt-2 text-sm text-primary font-medium">
                  <div class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></div>
                  System Online
                </div>
              </div>
            </div>
            <div class="flex items-center space-x-3">
              <div class="text-right hidden md:block">
                <p class="text-sm text-secondary">Last login</p>
                <p class="text-sm font-medium text-neutral-dark">Today, 2:30 PM</p>
              </div>
              <button
                id="logout-button"
                class="bg-gradient-to-r from-secondary to-neutral-light hover:from-neutral-light hover:to-secondary text-white px-6 py-3 rounded-xl transition-all duration-300 font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 active:scale-95 flex items-center space-x-2"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                <span>Logout</span>
              </button>
            </div>
          </div>
        </div>

        <!-- Dashboard Content -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          <!-- Quick Stats Cards -->
          <div class="bg-gradient-to-br from-primary to-primary-light text-white rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-24 h-24 bg-white/10 rounded-full -mr-12 -mt-12"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-4">
                <div class="h-12 w-12 bg-white/20 rounded-xl flex items-center justify-center">
                  <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <span class="text-xs bg-white/20 px-2 py-1 rounded-full">+12%</span>
              </div>
              <h3 class="text-lg font-semibold mb-2">Estimate Requests</h3>
              <p class="text-4xl font-bold mb-1">24</p>
              <p class="text-white/80 text-sm">This month</p>
            </div>
          </div>

          <div class="bg-gradient-to-br from-accent to-accent/80 text-neutral-dark rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-24 h-24 bg-primary/10 rounded-full -mr-12 -mt-12"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-4">
                <div class="h-12 w-12 bg-primary/20 rounded-xl flex items-center justify-center">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </div>
                <span class="text-xs bg-primary/20 text-primary px-2 py-1 rounded-full">Active</span>
              </div>
              <h3 class="text-lg font-semibold mb-2">Active Projects</h3>
              <p class="text-4xl font-bold mb-1">12</p>
              <p class="text-secondary text-sm">In progress</p>
            </div>
          </div>

          <div class="bg-white/95 backdrop-blur-lg border border-white/20 rounded-2xl p-6 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-24 h-24 bg-primary/5 rounded-full -mr-12 -mt-12"></div>
            <div class="relative">
              <div class="flex items-center justify-between mb-4">
                <div class="h-12 w-12 bg-primary/10 rounded-xl flex items-center justify-center">
                  <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                  </svg>
                </div>
                <span class="text-xs bg-green-100 text-green-600 px-2 py-1 rounded-full">+8%</span>
              </div>
              <h3 class="text-lg font-semibold mb-2 text-neutral-dark">Revenue</h3>
              <p class="text-4xl font-bold text-primary mb-1">$8,450</p>
              <p class="text-secondary text-sm">This month</p>
            </div>
          </div>
        </div>

        <!-- Management Sections -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Estimate Management -->
          <div class="bg-white/95 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-white/20">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-neutral-dark">Recent Estimates</h2>
              <div class="h-10 w-10 bg-gradient-to-br from-primary to-primary-light rounded-xl flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
            </div>
            <div class="space-y-4">
              <div class="flex justify-between items-center p-4 bg-gradient-to-r from-primary/5 to-primary/10 rounded-xl border-l-4 border-primary hover:shadow-lg transition-all duration-200 cursor-pointer">
                <div class="flex items-center space-x-3">
                  <div class="h-10 w-10 bg-primary/20 rounded-full flex items-center justify-center">
                    <span class="text-primary font-bold text-sm">JS</span>
                  </div>
                  <div>
                    <p class="font-semibold text-neutral-dark">John Smith</p>
                    <p class="text-sm text-secondary">Lawn mowing service • 2 hours ago</p>
                  </div>
                </div>
                <span class="text-xs bg-primary text-white px-3 py-1 rounded-full font-medium">New</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-gradient-to-r from-accent/20 to-accent/30 rounded-xl border-l-4 border-accent hover:shadow-lg transition-all duration-200 cursor-pointer">
                <div class="flex items-center space-x-3">
                  <div class="h-10 w-10 bg-accent/40 rounded-full flex items-center justify-center">
                    <span class="text-neutral-dark font-bold text-sm">SJ</span>
                  </div>
                  <div>
                    <p class="font-semibold text-neutral-dark">Sarah Johnson</p>
                    <p class="text-sm text-secondary">Landscape maintenance • 1 day ago</p>
                  </div>
                </div>
                <span class="text-xs bg-secondary text-white px-3 py-1 rounded-full font-medium">Pending</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-gradient-to-r from-green-50 to-green-100 rounded-xl border-l-4 border-green-400 hover:shadow-lg transition-all duration-200 cursor-pointer">
                <div class="flex items-center space-x-3">
                  <div class="h-10 w-10 bg-green-200 rounded-full flex items-center justify-center">
                    <span class="text-green-800 font-bold text-sm">MD</span>
                  </div>
                  <div>
                    <p class="font-semibold text-neutral-dark">Mike Davis</p>
                    <p class="text-sm text-secondary">Seasonal cleanup • 3 days ago</p>
                  </div>
                </div>
                <span class="text-xs bg-green-500 text-white px-3 py-1 rounded-full font-medium">Completed</span>
              </div>
            </div>
            <button class="mt-6 w-full bg-gradient-to-r from-primary to-primary-light hover:from-primary-light hover:to-primary text-white py-3 px-6 rounded-xl transition-all duration-300 font-semibold shadow-lg hover:shadow-xl transform hover:scale-[1.02] active:scale-[0.98] flex items-center justify-center space-x-2">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <span>View All Estimates</span>
            </button>
          </div>

          <!-- Quick Actions -->
          <div class="bg-white/95 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-white/20">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-neutral-dark">Quick Actions</h2>
              <div class="h-10 w-10 bg-gradient-to-br from-accent to-accent/80 rounded-xl flex items-center justify-center">
                <svg class="h-5 w-5 text-neutral-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
            </div>
            <div class="space-y-4">
              <button class="w-full text-left p-5 bg-gradient-to-r from-primary/5 to-primary/10 hover:from-primary/10 hover:to-primary/20 transition-all duration-300 rounded-xl border border-primary/20 hover:border-primary/40 group hover:shadow-lg transform hover:scale-[1.02]">
                <div class="flex items-center space-x-4">
                  <div class="h-12 w-12 bg-primary/20 group-hover:bg-primary/30 rounded-xl flex items-center justify-center transition-colors">
                    <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-neutral-dark text-lg">View All Estimates</h3>
                    <p class="text-sm text-secondary">Manage customer estimate requests and quotes</p>
                  </div>
                </div>
              </button>
              <button class="w-full text-left p-5 bg-gradient-to-r from-accent/20 to-accent/30 hover:from-accent/30 hover:to-accent/40 transition-all duration-300 rounded-xl border border-accent/40 hover:border-accent/60 group hover:shadow-lg transform hover:scale-[1.02]">
                <div class="flex items-center space-x-4">
                  <div class="h-12 w-12 bg-accent/40 group-hover:bg-accent/50 rounded-xl flex items-center justify-center transition-colors">
                    <svg class="h-6 w-6 text-neutral-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-neutral-dark text-lg">Generate Reports</h3>
                    <p class="text-sm text-secondary">View business analytics and performance reports</p>
                  </div>
                </div>
              </button>
              <button class="w-full text-left p-5 bg-gradient-to-r from-secondary/10 to-secondary/20 hover:from-secondary/20 hover:to-secondary/30 transition-all duration-300 rounded-xl border border-secondary/30 hover:border-secondary/50 group hover:shadow-lg transform hover:scale-[1.02]">
                <div class="flex items-center space-x-4">
                  <div class="h-12 w-12 bg-secondary/20 group-hover:bg-secondary/30 rounded-xl flex items-center justify-center transition-colors">
                    <svg class="h-6 w-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-neutral-dark text-lg">Site Settings</h3>
                    <p class="text-sm text-secondary">Update website content and configuration</p>
                  </div>
                </div>
              </button>
              <button class="w-full text-left p-5 bg-gradient-to-r from-neutral-light/10 to-neutral-light/20 hover:from-neutral-light/20 hover:to-neutral-light/30 transition-all duration-300 rounded-xl border border-neutral-light/30 hover:border-neutral-light/50 group hover:shadow-lg transform hover:scale-[1.02]">
                <div class="flex items-center space-x-4">
                  <div class="h-12 w-12 bg-neutral-light/20 group-hover:bg-neutral-light/30 rounded-xl flex items-center justify-center transition-colors">
                    <svg class="h-6 w-6 text-neutral-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-neutral-dark text-lg">Customer Management</h3>
                    <p class="text-sm text-secondary">View and manage customer information</p>
                  </div>
                </div>
              </button>
            </div>
          </div>
        </div>

        <!-- Footer -->
        <div class="mt-12 text-center">
          <a
            href="/"
            class="inline-flex items-center text-secondary hover:text-neutral-dark transition-colors duration-200 font-medium bg-white/50 backdrop-blur-sm px-6 py-3 rounded-xl hover:bg-white/80"
          >
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Website
          </a>
        </div>
      </div>
    </main>
  </div>
</Layout> 